<?xml version="1.0"?>

<portlet-app xmlns="http://jakarta.ee/xml/ns/portlet"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://jakarta.ee/xml/ns/portlet http://jakarta.ee/xml/ns/portlet/portlet-app_4_0.xsd"
			 version="4.0">
	<portlet>
		<portlet-name>hello_world</portlet-name>
		<display-name>${artifactId}</display-name>
		<portlet-class>${package}.HelloWorldPortlet</portlet-class>
		<init-param>
			<name>foo</name>
			<value>1234</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>${artifactId}</title>
			<short-title>${artifactId}</short-title>
			<keywords>${artifactId}</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>