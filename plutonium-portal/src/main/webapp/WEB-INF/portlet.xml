<portlet-app
    xmlns="http://jakarta.ee/xml/ns/portlet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jakarta.ee/xml/ns/portlet http://jakarta.ee/xml/ns/portlet/portlet-app_4_0.xsd"
    version="4.0">

    <portlet>
    <description>AboutPortletDescription</description>
    <portlet-name>AboutPortlet</portlet-name>
    <display-name>About Portlet</display-name>
    <portlet-class>com.liferay.plutonium.driver.portlets.AboutPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>EDIT</portlet-mode>
      <portlet-mode>HELP</portlet-mode>
    </supports>
    <portlet-info>
      <title>About Liferay Plutonium</title>
    </portlet-info>
  </portlet>
  
  <portlet>
    <description>AdminPortletDescription</description>
    <portlet-name>AdminPortlet</portlet-name>
    <display-name>Admin Portlet</display-name>
    <portlet-class>com.liferay.plutonium.driver.portlets.AdminPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>EDIT</portlet-mode>
      <portlet-mode>HELP</portlet-mode>
    </supports>
    <portlet-info>
      <title>Liferay Plutonium Portal Admin</title>
    </portlet-info>
  </portlet>

    <portlet>
        <description>Used to administer plutonium pages</description>
        <portlet-name>PlutoniumPageAdmin</portlet-name>
        <display-name>Plutonium Page Administration Portlet</display-name>
        <portlet-class>com.liferay.plutonium.driver.portlets.PageAdminPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>
        <portlet-info>
            <title>Plutonium Page Administrator</title>
        </portlet-info>
    </portlet>  
</portlet-app>


